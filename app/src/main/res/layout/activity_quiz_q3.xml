<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizQ3">

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/quizwall" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:fontFamily="@font/alegreya_sc"
        android:text="Q3. How many days in a leap year?"
        android:textAlignment="center"
        android:textColor="#FFF30C"
        android:textSize="24sp"
        android:textStyle="bold"  />
    <RadioGroup
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="196dp">

        <RadioButton
            android:id="@+id/radioButton9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="365 Days"
            android:fontFamily="@font/alegreya_sc"
            android:textStyle="bold"
            android:textColor="#FFF30C"
            android:textSize="24sp"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/radioButton10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="364 Days"
            android:fontFamily="@font/alegreya_sc"
            android:textStyle="bold"
            android:textColor="#FFF30C"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radioButton11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="366 Days"
            android:fontFamily="@font/alegreya_sc"
            android:textStyle="bold"
            android:textColor="#FFF30C"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radioButton12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="367 Days"
            android:fontFamily="@font/alegreya_sc"
            android:textStyle="bold"
            android:textColor="#FFF30C"
            android:textSize="24sp" />
    </RadioGroup>

    <Button
        android:id="@+id/button44"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/alegreya_sc"
        android:text="Submit"
        android:textColor="#006064" />


</RelativeLayout>